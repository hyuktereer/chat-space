%div.message{data: {id: message.id}}
  %div.message-upper-info
    %p.message-upper-info__talker
      = message.user.name
    %p.message-upper-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  %div.message__text
    = message.content
    
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
